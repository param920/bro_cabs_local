
APP_NAME=BroCabs
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Fast, disposable, CI database
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# keep CI hermetic: no network/services needed (for now)
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
LOG_CHANNEL=stderr

# Don't send emails, just log them
MAIL_MAILER=log

# Optional: a switch you can check in providers if needed
SKIP_DP_BOOTSTRAP=true
